.page-header
  %h2 
    Stores
    .pull-right
      = link_to new_store_path, :class => 'btn' do
        %i.icon-plus
        New Store
    .clear

.subnav
  .pull-right
    %form.form-inline.form-search
      %input.search-query.span2{:type=>"text", :placeholder=>"Search..."}
      %button.btn
        %i.icon-search
  %ul.nav.nav-pills
    %li 
      =link_to "Filter 1", ""
    %li
      =link_to "Filter 2", ""
    %li
      =link_to "Filter 3", ""

= render :partial => "shared/flash_alerts"

%table{:class => "table table-striped table-bordered"}
  %thead
    %tr
      %th ID
      %th
        = t("activerecord.attributes.store.name", :default => t("activerecord.labels.name", :default => "Name"))
      %th RUT
      %th Created at
      %th Actions
  %tbody
    - @stores.each do |store|
      %tr
        %td= store.id
        %td= link_to store.name, store_path(store)
        %td= store.rut.to_s
        %td= store.created_at
        %td
          = link_to "Show", store_path(store)
          = link_to "Edit", edit_store_path(store)
          = link_to "Destroy", store_path(store), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"

